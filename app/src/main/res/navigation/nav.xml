<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="jose.flores.acft.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_eventDetailsActivity"
            app:destination="@id/eventDetailsActivity" />
    </fragment>
    <fragment
        android:id="@+id/calculatorFragment"
        android:name="jose.flores.acft.CalculatorFragment"
        android:label="Calculator"
        tools:layout="@layout/fragment_calculator" />
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="jose.flores.acft.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />
    <activity
        android:id="@+id/eventDetailsActivity"
        android:name="jose.flores.acft.EventDetailsActivity"
        android:label="activity_event_details"
        tools:layout="@layout/activity_event_details" />
</navigation>